#               de elementos Condicionais em Python
#
# Language:     python
#
# ============================================================

print("Florestan Castle")
print("")

ENTRADA = "Lugar"
ENTRADA = input("Escolha o caminho do PLAYER: ")
print("")
print("")

print("Caminho escolhido: " + ENTRADA)
print("")

if ENTRADA == "Caverna dos Ossos Flamejantes":
    print("Recurso 1: Lápis Encantado por uma Fênix")
    print("Recurso 2: Borracha Curativa para Danos Leves")
    print("Adversário 1: Dragão Mastigador de Ossos")
    print("Adversário 2: Besouros Sulfúricos")
elif ENTRADA == "Viajante da Placa em Destroços":
    print("Recurso 1: Mapa do Viajante")
    print("Recurso 2: Água de Prata")
    print("Adversário 1: Maleta Monstro do Viajante")
    print("Adversário 2: Fantasma de Garrafa")
elif ENTRADA == "Castelo em Chamas":
    print("Recurso 1: Moedas de Zinabre")
    print("Recurso 2: Elmo do Cavaleiro de Jade")
    print("Desafio: Feiticeira de Pólvora")
else:
    print("> Este caminho não foi desbloqueado ainda. Complete a fase 1 para liberar")

  
